<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @title || title %></title>

    <%= stylesheet_link_tag ['http://fonts.googleapis.com/css?family=Crimson+Text:regular&subset=latin', 'style'] %>

    <!-- RSS and Meta tags -->
    <%= auto_discovery_link_tag(:rss, blog_url(:rss)) %>
    <meta name="keywords" content="ruby, rails, ruby on rails, software development, web development, product development" />
    <meta name="description" content="Based in Lisbon, Portugal, Gnomeslab positions itself as a specialist in the fields of Web Development and Product Development." />
    <!-- End RSS and Meta tags -->

    <!-- JS -->
    <%= javascript_include_tag ['http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js',
                                'rails', 'jquery.jcarousel.pack', 'jquery-func', 'application'] %>
    <%= csrf_meta_tag %>
    <!-- End JS -->

    <!-- Google Analytics -->
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19615839-1']);
      _gaq.push(['_setDomainName', '.gnomeslab.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') +
          '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
    <!-- End Google Analytics -->
  </head>

  <body>
    <!-- Header -->
    <div id="header">
      <div class="shell">
        <!-- Socials -->
        <%= render 'shared/header/social' %>
        <!-- End Socials -->
      </div>
    </div>
    <!-- End Header -->

    <!-- Container -->
    <div id="container">
      <!-- shell -->
      <div class="shell">
        <!-- Logo + Navigation -->
        <%= render 'shared/header/top_menu' %>
        <!-- End Logo + Navigation -->

        <%= yield :pre_content %>

        <!-- Main -->
        <div id="main">
          <div class="cl">&nbsp;</div>

          <!-- Content -->
          <div id="content" class="col col1">
            <%= yield %>
          </div>
          <!-- End Content -->

          <!-- Sidebar -->
          <div id="sidebar" class="col-right col2">
            <%= yield :sidebar %>
          </div>
          <!-- End Sidebar -->

          <div class="cl">&nbsp;</div>
          
          <!-- Cols -->
          <%= yield :content_columns %>
          <!-- End Cols -->
        </div>
        <!-- End Main -->
      </div>
      <!-- end shell -->
    </div>
    <!-- End Container -->

    <!-- Footer -->
    <%= render 'shared/footer/content' %>
    <!-- End Footer -->

    <!-- Footer Nav -->
    <%= render 'shared/footer/nav' %>
    <!-- Footer Nav -->
  </body>
</html>
