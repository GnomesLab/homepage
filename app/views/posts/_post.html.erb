      <small class="creator">by <%= post.user.name %></small>
      <small class="right"><%=l post.created_at, :format => :long %></small>
          <%= link_to post.title, post %>
    </h2>
  </div>
  <div class="entry">
    <p><%= post.body %></p>
  </div>
  
  <div class="post-meta">
