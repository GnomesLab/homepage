<!-- Posts -->
<div class="posts justify">
  <%= render 'shared/flash/box', :locals => flash %>
  <div class="post">
    <% if @posts.present? %>
      <%= render @posts %>
    <% end %>
  </div>
  <!-- Pagination -->
  <%= will_paginate @posts,
                    :previous_label => '&lt; Prev',
                    :next_label => 'Next &gt;',
                    :separator => '<span>|</span>' %>
  <!-- End Pagination -->
  
</div>
<!-- End Posts -->

<%= content_for :sidebar do %>
  <%= render :partial => 'shared/content_box/popular_post' %>
  <%= render :partial => 'shared/content_box/popular_tags' %>
  <%= render :partial => 'shared/content_box/archives' %>
<% end %>