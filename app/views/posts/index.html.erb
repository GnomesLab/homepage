<!-- Posts -->
<div id='posts' class="justify">
  <%= render 'shared/flash/box', :locals => flash %>

  <% if user_signed_in? %>
    <%= render @posts if @posts %>
  <% else %>
    <%= render @published if @published %>
  <% end %>

  <!-- Pagination -->
  <%= will_paginate @posts,
                    :previous_label => '&lt; Prev',
                    :next_label => 'Next &gt;',
                    :separator => '<span>|</span>' %>
  <!-- End Pagination -->
</div>
<!-- End Posts -->

<%= content_for :sidebar do %>
  <%= render :partial => 'shared/content_box/popular_post' %>
  <%= render :partial => 'shared/content_box/popular_tags' %>
  <%= render :partial => 'shared/content_box/archives' %>
<% end %>