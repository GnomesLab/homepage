<!-- Post Single -->
<div class="post justify">
  <%= render 'shared/flash/box', :locals => flash %>

  <%= render 'posts/post_view' %>
</div>
<!-- End Post Single -->

<!-- Comments -->
<div class="post-comments justify" id="comments">
  <a href="#submit-comment" class="right">Write a comment</a>
  <h4 class="comments-count"><%= pluralize(@post.comments_count, 'Comment') %></h4>
  
  <% if @post.comments.present? %>
  <!-- Comment List -->
  <div class="comment-list">
    <ol>
      <% @post.comments.first_level.each_index do |idx| %>
      <%= render :partial => 'comments/comment',
                 :locals => { :idx => idx, :comment => @post.comments.first_level[idx] } %>
      <% end %>
    </ol>
  </div>
  <!-- End Comment List -->
  <% end %>

  <!-- Comment Form -->
  <div class="comment-form form" id="submit-comment">
    <h4>Post a Comment</h4>
    <div class="cl">&nbsp;</div>
    <div class="left">
      <p>
        <label>Name <span>(required)</span></label>
        <input type="text" class="field"  />
      </p>
      <p>
        <label>Email <span>(required) Will not be published</span></label>
        <input type="text" class="field"  />
      </p>
      <p>
        <label>URL</label>
        <input type="text" class="field"  />
      </p>
    </div>
    <div class="right">
      <p>
        <label>Comment:</label>
        <textarea class="field" rows="10" cols="10"></textarea>
      </p>
      <p class="ar">
        <input type="submit" class="button" value="Post this Comment" />
      </p>
    </div>
    <div class="cl">&nbsp;</div>
    
  </div>
  <!-- End Comment Form -->
  
</div>
<!-- End Comments -->

<%= content_for :sidebar do %>
  <%= render 'shared/content_box/related_post', :collection => @post.related %>
  <%= render 'shared/content_box/popular_post' %>
  <%= render 'shared/content_box/recent_comments' %>
<% end %>
