<h2 class="border">Projects</h2>

<!-- Projects -->
<div class="items items-images">
  <% if @projects.present? %>
  <ul class="projects"> <%= render @projects %> </ul>
  <% end %>
</div>
<!-- End Projects -->

<!-- Pagination -->
<%= will_paginate @projects,
                  :previous_label => '&lt; Prev',
                  :next_label => 'Next &gt;',
                  :separator => '<span>|</span>' %>
<!-- End Pagination -->

<%= content_for :sidebar do %>
  <%= render 'categories_list' %>
  <%= render 'contact_teaser' %>
<% end %>