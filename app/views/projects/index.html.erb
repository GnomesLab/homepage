<h2 class="border">Projects</h2>

<!-- Projects -->
<div class="items items-images">
  <% if !@projects.blank? %>
  <ul class="projects">
    <% for project in @projects %>
      <li>
        <div class="cl">&nbsp;</div>
        <div class="item-image">
          <a href="project-detailed.html" class="aimg"><img src="../images/content/project1.jpg" alt="" /></a>
        </div>
        <div class="item-info">
          <small><a href="projects.html">Gnomeslab</a> / July, 1 2010</small>
          <h3>
            <a href="project-detailed.html"><%= project.title %></a>
          </h3>
          <p><%= project.subtitle %></p>
          <p class="view"><a href="project-detailed.html">View case study</a></p>
        </div>
        <div class="cl">&nbsp;</div>
      </li>
    <% end %>
  </ul>
  <% end %>
</div>
<!-- End Projects -->

<!-- Pagination -->
<%= will_paginate @projects,
                  :previous_label => '&lt; Prev',
                  :next_label => 'Next &gt;',
                  :separator => '<span>|</span>' %>
<!-- End Pagination -->

<%= content_for :sidebar do %>
  <%= render :partial => 'categories' %>
  <%= render :partial => 'contact_teaser' %>
<% end %>